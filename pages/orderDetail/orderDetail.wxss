/* pages/orderDetail/orderDetail.wxss */

.status {
  height: 160rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.status image {
  width: 70rpx;
  height: 70rpx;
  margin-right: 20rpx;
}

.status text {
  font-size: 56rpx;
  color: rgb(155, 142, 142);
}

.line {
  display: block;
  height: 2rpx;
  background: #eee;
}

.under_line {
  display: block;
  width: 100%;
  height: 12rpx;
  background: #eee;
}

.code>view {
  font-size: 30rpx;
  padding: 20rpx 20rpx 20rpx 0rpx;
  width: calc(100% - 40rpx);
  margin-left: 20rpx;
  display: flex;
  justify-content: space-between;
}
.code>view:nth-of-type(1){
border-bottom:4rpx solid #eee;
}
.code>view>text:nth-of-type(2){
  color: rgb(155, 142, 142);
}
.tip{
   padding: 20rpx;
   background: #eee;
   font-size:26rpx;
}
.tip>text{
   display:inline-block;
   padding-left:10rpx;
   border-left:8rpx solid #a3cc49;
   line-height:26rpx;
}
.tip_content{
  padding:30rpx 20rpx;
  font-size:30rpx;
  color: rgb(155, 142, 142);
}
.tip_content text{
  display:block;
  margin-bottom:20rpx;
}