/* pages/myBaby.wxss */
.babay_msg{
  padding:20rpx;
  height:60rpx;
  display:flex;
  justify-content: space-between;
}
.babay_msg>text:nth-of-type(2){
    color:#ccc;
}
.under_line{
  display:block;
  width:100%;
  height:6rpx;
  background: #eee;
}
.baby_content{
  padding:20rpx;
}
.title{
  display: block;
  margin-bottom:20rpx;
  color: #ccc;
}
.content{
  line-height: 60rpx;
}
.add_baby{
  width:100%;
  height:200rpx;
  /* background:#6fbdc1; */
  background:linear-gradient(#a6d8df, #6fbdc1);
  display:flex;
  flex-direction: column;
  justify-content:center;
  align-items:center;
}
.add_baby image{
  width:50rpx;
  height:50rpx;
  margin-bottom:20rpx;

}