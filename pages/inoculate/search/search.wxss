/* pages/inoculate/search/search.wxss */
.search{
  background: #eee;
  /* height:120rpx; */
  padding:20rpx;
  position:fixed;
  top:0;
  width:calc(100% - 40rpx);
}
.search >view{
   background:#fff;
   display:flex;
   align-items: center;
   padding:10rpx;
   justify-content:space-between;
   border-radius:10rpx;
}
.search >view>view{
   display: flex;
   align-items:center;

}
.search input {
  margin-left:20rpx;
  height:30rpx;
}
.search >view image{
   width:40rpx;
   height:40rpx;
}
.content{
  padding:20rpx 20rpx 0rpx 20rpx;
  font-size:36rpx;
}
.title{
  display:flex;
  justify-content: space-between;
}
.main{
  display:flex;
  justify-content:space-between;
  align-items: center;
  margin-top:20rpx;
   font-size:30rpx;
   margin-bottom:30rpx;
}
.main>view{
    display:flex;
    justify-content:space-between;
    align-items:center;
}
.main>view>text{
  display:inline-block;
  width:120rpx;
  height:120rpx;
  border-radius:50%;
  background:#eee;
  text-align: center;
  line-height:120rpx;
  margin-right:20rpx;
}
.main>view>view{
    display:flex;
    flex-direction:column;
    justify-content:space-between;
    height:100rpx;
}
.main image{
  width:40rpx;
  height:40rpx;
}
.under_line{
  display:block;
  width:100%;
  height:6rpx;
  background: #eee;
}
.scroll_content{
  height:calc(100vh - 120rpx);
  margin-top:120rpx;
}